# Copy this file to .env and fill in the required values.

# --- Database ---
DATABASE_URL=postgresql+asyncpg://postgres:local_dev_postgres@remnawave-db:5432/postgres

# --- Redis / Valkey ---
REDIS_URL=redis://remnawave-redis:6379/0

# --- Remnawave VPN Backend ---
REMNAWAVE_URL=http://remnawave:3000
REMNAWAVE_API_TOKEN=your_remnawave_api_token_here

# --- Telegram Bot ---
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
ADMIN_TELEGRAM_IDS=123456789,987654321

# --- CryptoBot Payments ---
CRYPTOBOT_TOKEN=your_cryptobot_api_token_here

# --- Worker Configuration ---
WORKER_CONCURRENCY=2
RESULT_TTL_SECONDS=3600
LOG_LEVEL=INFO
ENVIRONMENT=development

# --- Notification Settings ---
NOTIFICATION_MAX_RETRIES=5
NOTIFICATION_BATCH_SIZE=50

# --- Health Check ---
HEALTH_CHECK_INTERVAL_SECONDS=120

# --- Cleanup Retention ---
CLEANUP_AUDIT_RETENTION_DAYS=90
CLEANUP_WEBHOOK_RETENTION_DAYS=30

# --- Bulk Operations ---
BULK_BATCH_SIZE=50

# --- Monitoring ---
METRICS_PORT=9090
